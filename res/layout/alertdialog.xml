<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="309dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="#FFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_alertdialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="提示"
        android:textColor="#5E76FF"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#5E76FF" />

    <TextView
        android:id="@+id/tv_alertdialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="是否确定退出系统？"
        android:textColor="#353535"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_alertdialog_positive"
            android:layout_width="115dp"
            android:layout_height="35dp"
            android:background="@drawable/v2_btn_works"
            android:text="确定"
            android:textColor="#555555"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_alertdialog_negative"
            android:layout_width="115dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/v2_btn_works"
            android:text="取消"
            android:textColor="#555555"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>