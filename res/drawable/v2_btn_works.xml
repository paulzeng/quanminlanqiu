<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- 状态遍历是顺序的，最先遇到的状态满足条件即采用，而非判断最合理状态 -->    <item android:drawable="@drawable/v2_btn_disable" android:state_enabled="false"/>
    <item android:drawable="@drawable/v2_btn_clicked" android:state_pressed="true"/>
    <item android:drawable="@drawable/v2_btn_normal" android:state_pressed="false"/>
    <item android:drawable="@drawable/v2_btn_normal"/>

</selector>